            <Panel class="SettingBox" onactivate="SetSetting('DifficultyRow', 1)"> <Label class="SettingOptionText" text="#hlw_setting_creep_difficulty_1"/> </Panel>
            <Panel class="SettingBox" onactivate="SetSetting('DifficultyRow', 2)"> <Label class="SettingOptionText" text="#hlw_setting_creep_difficulty_2"/> </Panel>
            <Panel class="SettingBox" onactivate="SetSetting('DifficultyRow', 3)"> <Label class="SettingOptionText" text="#hlw_setting_creep_difficulty_3"/> </Panel>
            <Panel class="SettingBox" onactivate="SetSetting('DifficultyRow', 4)"> <Label class="SettingOptionText" text="#hlw_setting_creep_difficulty_4"/> </Panel>
        </Panel>
        
		
