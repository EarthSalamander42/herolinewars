        <Label class='SettingHeader' text="#hlw_setting_max_amount_of_creeps_on_map_short" style="" />
        <Panel id="MaxCreepPerTeamRow" class="SettingsRow">
            <Panel class="SettingBox" onactivate="SetSetting('MaxCreepPerTeamRow', 1)"> <Label class="SettingOptionText" text="150"/> </Panel>
            <Panel class="SettingBox" onactivate="SetSetting('MaxCreepPerTeamRow', 2)"> <Label class="SettingOptionText" text="200"/> </Panel>
            <Panel class="SettingBox" onactivate="SetSetting('MaxCreepPerTeamRow', 3)"> <Label class="SettingOptionText" text="250"/> </Panel>
            <Panel class="SettingBox" onactivate="SetSetting('MaxCreepPerTeamRow', 4)"> <Label class="SettingOptionText" text="300"/> </Panel>
        </Panel>
        
        <Label class='SettingHeader' text="#hlw_setting_max_creep_charges_short" style="" />
        <Panel id="MaxChargesPerCreepRow" class="SettingsRow">
            <Panel class="SettingBox" onactivate="SetSetting('MaxChargesPerCreepRow', 1)"> <Label class="SettingOptionText" text="3"/> </Panel>
            <Panel class="SettingBox" onactivate="SetSetting('MaxChargesPerCreepRow', 2)"> <Label class="SettingOptionText" text="5"/> </Panel>
            <Panel class="SettingBox" onactivate="SetSetting('MaxChargesPerCreepRow', 3)"> <Label class="SettingOptionText" text="7"/> </Panel>
            <Panel class="SettingBox" onactivate="SetSetting('MaxChargesPerCreepRow', 4)"> <Label class="SettingOptionText" text="10"/> </Panel>
        </Panel>
		
        <Label class='SettingNote' text="#hlw_setting_note" style="" />
